# Sarvam AI API key — required for the AI voice assistant
# Get yours at https://dashboard.sarvam.ai/
SARVAM_API_KEY=sk_your_api_key_here

# Azure Cosmos DB — contact forms, visitor tracking, AI chat logs
# Provision via: az cosmosdb create --name tamilselvi-db --resource-group tamilselvi-rg
COSMOS_CONNECTION_STRING=AccountEndpoint=https://your-db.documents.azure.com:443/;AccountKey=your-key;

# Azure Application Insights — visitor analytics & funnel tracking
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=...

# Azure Storage — media CDN
AZURE_STORAGE_ACCOUNT=tamilselvimedia
